{
  "extends": ["standard"],
  "plugins": ["prettier"],
  "rules": {
    "space-before-function-paren": "off",
    "no-throw-literal": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "arrowParens": "avoid",
        "printWidth": 2048,
        "trailingComma": "none"
      }
    ]
  }
}
