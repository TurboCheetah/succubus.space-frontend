{
  "extends": ["standard","prettier", "plugin:prettier/recommended", "plugin:@next/next/recommended"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "arrowParens": "avoid",
        "trailingComma": "none",
        "printWidth": 2048
      }
    ]
  }
}
